.swiper-wrap{
  width: 100%;
  height: 230rpx;
  top: 20px;
  position: relative;
  box-sizing: border-box;
}
.swiper-slider{
  width: 100%;
  height: 100%;
  position: absolute;
  border-radius: 10px;
}
.slider-image{
  display: block;
  margin: 0 auto;
  position: absolute;
  transition: all 400ms 0ms ease-in-out;
  border-radius: 10px;
	transform-origin:50% 100%;
  width: 100%;
  height: 100%;
  box-shadow: 0 3px 5px 0px rgba(75, 73, 73,.3);
}
image{will-change: transform}