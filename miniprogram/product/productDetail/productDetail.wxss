.prodict-detail-navigation .nav{
  position: fixed;
}
scroll-view{
  height: 100vh;
}

.swiper-container{
 
  width: 100%;
  height: 900rpx;
}
.swiper-item{
   display: flex;
  align-items: center;
}
.swipe-img{
  width: 100%;
  background: transparent;
}

/* 价格title */
.product-price{
  border-radius: 15rpx 15rpx 0 0;
  padding: 20rpx;
}
.product-price .new-price{
  color: #ec5c2b;
  font-size: 35rpx;

}
.product-price .new-price::before{
  content: '¥';
  font-size: 26rpx;
  margin-right: 10rpx;

}
.content{
  background: #fefefe;
  position: relative;
  z-index: 2;
  margin-top: -15rpx;
  border-radius: 15rpx 15rpx 0 0;
  height: auto;
  width: 100%;
}
.product-title-wrap{
  display: flex;
  align-items: center;
  padding:0 20rpx;
}
.product-title{
  flex: 1;
  font-size: 30rpx;
  white-space: pre-wrap;
  height: 100%;
  font-weight: 600;
}
.product-share{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  background: #ec5c2b;
  text-align: center;
  padding-top: 12rpx;
  box-sizing: border-box;
  margin-left: 30rpx;
}
.ios-git-branch{
  font-size: 40rpx;
}

.quick-icon{
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  padding: 20rpx 100rpx;
}
.quick-icon view {
}
.quick-icon view text{
  color: #606266 ;
}
.quick-icon-ios{
  margin-right: 10rpx;
}
.product-style-wrap-pop{
  height: 80vh;
}


/* 选择款式 */
.select-style{
 background: -webkit-linear-gradient(left, #f5f5f5 , #f8f8f8);

  /* background: #f8f8f8; */
  padding: 20rpx 0;
}
.select-style-container{
  background: #fff;
  height: 166rpx;
  padding: 20rpx 0;
}
.style-number{
  color: #111;
  margin-left: 40rpx;
}
.select-style-group{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.select-style-images{
  margin-left: 140rpx;
  margin-top: 20rpx;
}
.select-style-images image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}
.select-image-note{
  height: 70rpx;
  display: inline-block;
  vertical-align: top;
  width: 160rpx;
  line-height: 70rpx;
  background: #f6f6f6;
  border-radius: 20rpx;
  color: #999;
  padding: 0 20rpx;
  margin-left: 10rpx;
  font-size: 24rpx;
  text-align: center;
}



