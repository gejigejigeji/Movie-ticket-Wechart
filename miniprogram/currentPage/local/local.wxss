/* miniprogram/currentPage/local/local.wxss */
.collection-local .nav{
  position: fixed;
}

/* 有数据 */
.addressGroup{
  display: flex;
  flex-direction: column;
  padding: 30rpx;
}
.addressItem{
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-top: 40rpx;
}
.addressRalate{
  font-weight: bold;
}
.addressRalate .addressSurname{
  margin: 0 40rpx 0 10rpx;
}
.normalAddress{
  display: inline-block;
  background: #f2662a2a;
  border-radius: 20rpx;
  color: #f2652a;
  padding:5rpx 20rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  font-weight: normal;
}
.addressDetails{
  margin-top: 10rpx;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addressDetails text{
  flex: 0 0 90%;
  display: inline-block;
  font-size: 24rpx;
  
}
.addressDetails image{
  width: 40rpx;
  height: 40rpx;
}










/* 空 */
.local-empty{
  position: absolute;
  text-align: center;
  top: 30%;
  left: 50%;
  height: 150rpx;
  width: 400rpx;
  margin: -75rpx 0 0 -200rpx;
  display: none;
}
.wait-info{
  font-size: 45rpx;
  margin-bottom: 25rpx;
}

/* 页脚 */
.local-footer-btn{
    background: #fefefe;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:150rpx;
  display: flex;
  z-index: 100;
  justify-content: center;
  align-items: center;
  border-radius: 35rpx 35rpx 0 0;
  box-shadow:0rpx -5rpx 30rpx 1rpx rgba(0,0,0,.3);
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-bottom: 10rpx;
}

.add-local-btn{
  color: #fff;
  background: -webkit-linear-gradient(left,#e06e3d,#ed8b58);
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  text-align: center;
  border-radius: 100rpx;
}