.record-local .nav{
  position: fixed;
}

.record-local--form{

  padding: 30rpx;
  box-sizing: border-box;
}
.record-local--form-item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin: 50rpx 0;
  height: 70rpx;
}
.record-input-span{
  flex: 1;
  border-radius: 100rpx;
  border: 1px solid #b1b4bc;
  display: flex;
}
.record-input-span input{
  height: 70rpx;
  padding: 0 30rpx;   
  flex: 1;
  align-items: center;
}
.record-arrow-down{
  width: 80rpx;
  height: 70rpx;
  line-height: 74rpx;
  text-align: center;
}
.record-region{
  height: 60rpx;
  width: 100%;
}
.surname{
  margin-right: 30rpx;
}
.normal-checkbox{
  margin-left: 30rpx;
}


/* 页脚 */
.local-footer-btn{
    background: #fefefe;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:150rpx;
  display: flex;
  z-index: 100;
  justify-content: center;
  align-items: center;
  border-radius: 35rpx 35rpx 0 0;
  box-shadow:0rpx -5rpx 30rpx 1rpx rgba(0,0,0,.3);
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-bottom: 10rpx;
}

.add-local-btn{
  color: #fff;
  background: -webkit-linear-gradient(left,#e06e3d,#ed8b58);
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  text-align: center;
  border-radius: 100rpx;
}